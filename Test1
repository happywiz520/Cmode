#include<stdio.h>
#include<string.h>
#include<stdlib.h>

int main()
{
    FILE *aws, *wri;
    int c, value, i, j;
    char text[100];
    
    wri = fopen("quiz9.bin", "w+");

    int num[] = {1265528695, 1818584167, 1696622963, 544239479, 25970}; //Knowledge is power 10位數值顯示
    
    printf("陣列中資料為反向：%s\n",num);			//num陣列變成反向 
    printf("\n");

    for (i = 0; i < 5; i++) 
    {
        fprintf(wri, "%x", num[i]);
        printf("%d---%d = %x\n",i,num[i],num[i]);	//將數值寫入檔案 
    }
    fclose(wri);

    aws = fopen("quiz9.bin", "r"); 
    i = 0;
    while (1)                         //讀取檔案內資料
    {
        c = fgetc(aws); 
        if (feof(aws))
            break; 

        text[i] = c;
        i++;
    }
    fclose(aws);
    printf("\n");
    printf("讀取檔案中資料列印：");
	for(j=0;j<i;j++)
	{
	printf("%c",text[j]);
	}
	printf("\n");
	printf("\n");
    printf("輸出結果：");
    for (j = 0; j < i; j += 2) 
    {
        char word[3] = {text[j], text[j + 1], '\0'}; //調整陣列內容，分割為4 bit(16*2)
        value = strtol(word, NULL, 16);	             //strtol 將char轉換為int
        printf("%c", value);
    }

    return (0);
}
