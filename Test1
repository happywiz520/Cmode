#include<stdio.h>
#include<string.h>
#include<stdlib.h>

int main()
{
    FILE *aws, *wri;
    int c, value, i, j;
    char text[100];
    
    wri = fopen("quiz9.bin", "w+");

    int num[] = {1265528695, 1818584167, 1696622963, 544239479, 25970};

    for (i = 0; i < 5; i++) 
    {
        fprintf(wri, "%x", num[i]);
    }

    fclose(wri);

    aws = fopen("quiz9.bin", "r");
    i = 0;
    while (1)
    {
        c = fgetc(aws); 
        if (feof(aws))
            break; 

        text[i] = c;
        i++;
    }
    fclose(aws);
    printf("\n");
	for(j=0;j<i;j++)
	{
	printf("%c",text[j]);
	}
	printf("\n");
	printf("\n");
    printf("輸出結果：");
    for (j = 0; j < i; j += 2) 
    {
        char word[3] = {text[j], text[j + 1], '\0'};
        value = (int)strtol(word, NULL, 16);
        printf("%c", value);
    }

    return (0);
}
